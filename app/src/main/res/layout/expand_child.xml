<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ep_park"
        android:background="@drawable/line" />

    <ImageView
        android:id="@+id/ep_park"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:padding="3dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/ep_title"
        android:layout_width="260dp"
        android:layout_height="25dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/ep_park"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ep_count"
        android:layout_width="260dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/ep_title"
        android:layout_alignStart="@+id/ep_title"
        android:layout_below="@+id/ep_title" />

</RelativeLayout>